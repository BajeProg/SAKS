<style>
    label{
        width: 200px;
    }
</style>
<h1>Оформление заказа</h1>
<form class="form-control" method="post">
    <label for="weight">Вес (кг):</label>
    <input type="number" id="weight" name="weight" step="0.01" required>
    <br />
    <label for="height">Высота (см):</label>
    <input type="number" id="height" name="height" required>
    <br />
    <label for="width">Ширина (см):</label>
    <input type="number" id="width" name="width" required>
    <br />
    <label for="length">Длина (см):</label>
    <input type="number" id="length" name="length" required>
    <br />
    <label for="receiver">Получатель:</label>
    <input type="text" id="receiver" name="receiver" required>
    <br />
    <label for="address">Адрес доставки:</label>
    <textarea id="address" name="address" required></textarea>
    <br />
    <button type="button" onclick="calculatePrice()">Рассчитать цену</button>
    <p id="price"></p>
    <input type="hidden" name="price" id="pricetocontroller" value="0"/>
    <br />
    <button type="submit" id="orederbutton" disabled>Оформить заказ</button>
</form>
<script>
    // Функция для рассчета цены
    function calculatePrice() {
        var weight = parseFloat(document.getElementById('weight').value);
        var height = parseInt(document.getElementById('height').value);
        var width = parseInt(document.getElementById('width').value);
        var length = parseInt(document.getElementById('length').value);

        // Здесь вы можете добавить логику для расчета цены на основе параметров заказа.
        // Например, простой пример для цены на основе веса:
        var price = weight < 40 ? (height * width * length + weight) * 2.5 : height * width * length / (weight * 2.5); // Просто для демонстрации

        // Выводим рассчитанную цену на страницу
        document.getElementById('price').textContent = 'Цена: ' + price.toFixed(2) + ' рублей';
        document.getElementById('pricetocontroller').value = price.toFixed(2);
        document.getElementById('orederbutton').removeAttribute('disabled');
    }
</script>